#/usr/bin/env bash

echo '>>> package assets'
cd apps/bmx_marcom
npm run deploy --prefix assets
cd ../..

echo '>>> digest assets'
MIX_ENV=prod mix phx.digest

echo '>>> create release'
MIX_ENV=prod mix distillery.release --name=bmx_marcom

echo '>>> done'
echo "Build the docker image with 'script/dk_build'"

